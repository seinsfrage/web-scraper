{{#each articles}}
  <section class='row'>
    <article class='story col-md-12'>
      <section class='row'>
	    <section class='col-md-4'>
			<img class='article-img img-responsive' src={{ imgsrc }} />
		</section>
		<section class='article-right col-md-8'>
			<h3 class='title'>{{ title }}</h3>
			<p class='summary'>{{ summary }}</p>
			<a class='read-more' target='_blank' href={{ link }}>Read More...</a>
			<h3>Comments:</h3>
			<section class='comments'></section>
			<textarea id='new-comment' class="form-control"></textarea>
			<button data-id={{ _id }} id='save-comment' class='btn btn-primary'>Submit</button>
		</section>
	  </section>
    </article>
  </section>
{{/each}}